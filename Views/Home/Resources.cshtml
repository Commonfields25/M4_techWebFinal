@model IEnumerable<M4Webapp.Models.Resource>
@{
    ViewData["Title"] = "Ressources Éducatives";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/home-resources.css" asp-append-version="true" />
}

<div class="container" x-data="resourceManager()">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <form method="get" asp-action="Resources" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="q" value="@ViewBag.CurrentQuery" class="form-control" placeholder="Rechercher une ressource..." />
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select">
                        <option value="">Toutes les catégories</option>
                        @foreach (var cat in (List<M4Webapp.Models.Category>)ViewBag.Categories)
                        {
                            <!option value="@cat.Id" @(cat.Id == ViewBag.CurrentCategoryId ? "selected" : "")>@cat.Name</!option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="onlyFree" id="onlyFree" value="true" @(ViewBag.OnlyFree ? "checked" : "") onchange="this.form.submit()">
                        <label class="form-check-label" for="onlyFree">Gratuit uniquement</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-center">Aucune ressource trouvée.</p>
            </div>
        }
        @foreach (var resource in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 resource-card" :class="isFavorite(@resource.Id) ? 'border-warning' : ''">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">@resource.Title</h5>
                            <button class="btn btn-sm" @click="toggleFavorite(@resource.Id)" :class="isFavorite(@resource.Id) ? 'text-warning' : 'text-secondary'">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                </svg>
                            </button>
                        </div>
                        <h6 class="card-subtitle mb-2 text-muted">@resource.Category.Name</h6>
                        <p class="card-text">@resource.Description</p>

                        <div class="mb-2">
                            @foreach (var topic in resource.Topics)
                            {
                                <span class="badge bg-info text-dark">@topic.Name</span>
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge @(resource.IsFree ? "bg-success" : "bg-warning text-dark")">
                                @(resource.IsFree ? "Gratuit" : "Payant")
                            </span>
                            <small class="text-muted">Niveau: @resource.Difficulty</small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="@resource.Url" target="_blank" class="btn btn-outline-primary w-100">Accéder</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/home-resources.js" asp-append-version="true"></script>
}
